<div class = "container mt-4 event-index">
  <%= render 'shared/navbar_logo_plus' %>
  <% @user_invitations.each do |i| %>
    <div class="border border-white p-3 rounded-lg mb-4">
      <h4><%= link_to i.event.name, event_path(i.event.id), style: "color: white;" %></h4>
      <p><%= i.event.description %></p>
      <h6><em>On <%= i.event.start_at.strftime("%A, %b %d") %> at </i><%= i.event.start_at.strftime("%I:%M %P") %></em></h6>
    </div>
    <% end %>
  </div>
</div>
