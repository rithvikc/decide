<div class="navbar navbar-expand navbar-light navbar-lewagon">
  <% img = image_tag("logo.png") %>

  <% if user_signed_in?%>
    <%= link_to img, "/dashboard", class: "navbar-brand"%>
  <% else %>
    <%= link_to "/", class: "navbar-brand" do %>
      <%= img %>
    <% end %>
  <% end %>

  <button class="navbar-toggler navbar-toggler-icon" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto ml-auto">
     <!--  <li class="nav-item active">
        <%= link_to "Home", "/", class: "nav-link" %>
      </li> -->

      <li class="nav-item dropdown">
        <%= image_tag "https://img.icons8.com/cotton/2x/menu.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to "Your events", events_path, class: "dropdown-item" %>
            <%= link_to "Create new event", new_event_path, class: "dropdown-item" %>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% else %>
            <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
